<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<ToggleButton android:id="@+id/Switch"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textOn="关闭" android:textOff="启用"></ToggleButton>

	<ToggleButton android:id="@+id/BaseService"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textOn="关闭" android:textOff="启用"></ToggleButton>

	<TextView android:id="@+id/logwindow" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:editable="false"
		android:scrollbars="vertical" />


</LinearLayout>